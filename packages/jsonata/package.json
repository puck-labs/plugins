{
  "name": "@puck-labs/jsonata",
  "version": "0.0.0",
  "description": "JSONata expression support for Puck editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "test": "bun test",
    "size": "size-limit"
  },
  "keywords": [
    "puck",
    "jsonata",
    "expressions",
    "visual-editor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@types/node": "^22.13.8",
    "@types/react": "^19.2.2",
    "size-limit": "^11.2.0",
    "tsdown": "^0.15.6",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@measured/puck": "^0.20.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "jsonata": "^2.0.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB",
      "name": "ESM bundle (no CSS)"
    },
    {
      "path": "dist/styles.css",
      "limit": "5 KB",
      "name": "Optional styles"
    }
  ]
}
